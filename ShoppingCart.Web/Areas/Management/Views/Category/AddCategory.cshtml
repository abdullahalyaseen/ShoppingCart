@model ShoppingCart.Web.Areas.Management.ViewModels.Categorys.AddCategoryViewModel

@{
    ViewData["Title"] = "Add new category";
}


<h1>Add New Category</h1>

<form enctype="multipart/form-data" asp-action="AddCategory" asp-controller="Category"
asp-area="Management" method="post" class="mt-3 col-4">
    <div asp-validation-summary="All" ></div>
    <div class="form-group col">
        <label asp-for="CategoryName" class="form-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group col">
        <label asp-for="Image" class="form-label" ></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <input type=submit value="Add Category" class="btn btn-primary mt-5"/>
</form>