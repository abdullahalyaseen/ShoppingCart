@model ShoppingCart.Models.Review;

@{
    string date = Model.AddedAt.ToString("dd") + " " + Model.AddedAt.ToString("MMMM") + ", " + Model.AddedAt.ToString("yyyy");
}
<div >
    <div class="col pt-4 mx-4">
        <div class="row">
            <div class="col-xl-1 col-lg-1 col-md-1 col-sm-2">
                <div class="row customer-avatar  align-content-center">
                    <span>@Model.ApplicationUser.FirstName.First()@Model.ApplicationUser.LastName.First()</span>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7 col-md-8 col-sm-10 ">
                <div>
                    <div class="product-rate d-inline-block">
                        <div class="star-outer">
                            <div id="@Model.ReviewId" class="star-inner" rating="@Model.Rate"></div>
                        </div>
                    </div>
                    <div class="d-inline-block">
                        <span class="review-info">@date</span>
                    </div>
                </div>
                @if (Model.Comment != null)
                {
                    <div class="review-comment mt-2 rounded-3">
                        <p>@Model.Comment</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>