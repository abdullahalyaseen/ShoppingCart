@inject SignInManager<ApplicationUser> signInManager;
@inject UserManager<ApplicationUser> userManager;

@{
    var CurrentPath = Context.Request.Path.Value;
    bool IsSignedIn = signInManager.IsSignedIn(User);
    var user = await userManager.GetUserAsync(User);

}

<ul class="navbar-nav">

    <li class="nav-item mx-2">
        <div class="dropdown">
            <button class="btn btn-outline-light dropdown-toggle text-dark nav-link" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-cart3"></i>
            </button>
        </div>
    </li>
    <li class="nav-item mx-2">
        <button type="button" class="btn btn-outline-light text-dark nav-link">
            <i class="bi bi-heart"></i>
        </button>
    </li>
    <li class="nav-item mx-2">
        <div class="dropdown">
            <button class="btn btn-outline-light dropdown-toggle text-dark nav-link" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle"></i>

                @if (IsSignedIn)
                {
                    <span> @user.FirstName</span>
                }
                else
                {
                    <span>Guest</span>
                }
            </button>
            <ul class=dropdown-menu>
                @if (!signInManager.IsSignedIn(User))
                {


                    <li class="dropdown-item">
                        <a asp-action="SignIn" asp-controller="Account" asp-route-ReturnUrl="@CurrentPath"
                        class="text-dark nav-link">Sign In</a>
                    </li>
                    <li class="dropdown-item">
                        <a asp-action="SignUp" asp-controller="Account" class="text-dark nav-link">Sign Up</a>
                    </li>
                }
                else
                {

                    <li class="dropdown-item">
                        <form asp-action="LogOut" asp-controller="Account">
                            <input type="submit" value="Sign Out" class="nav-link text-dark btn btn-warning" />
                        </form>
                    </li>
                }
            </ul>
        </div>
    </li>



</ul>
